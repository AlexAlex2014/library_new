.post-box{"data-item_id" => "#{comment.id}", "current-book_id" => "#{@book.id}"}
  %p
    = comment.created_at.strftime("%I:%M %p")
  %p
    %strong Commenter
    = comment.user.email
  %p
    %strong Comment
    = comment.body
  -if current_user.master?
    %i.far.fa-trash-alt.delete-link_com
  - else
    - if current_user.email == comment.user.email
      %i.far.fa-trash-alt.delete-link_com
