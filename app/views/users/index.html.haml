- if current_user.master?
  = button_new_helper(new_user_path)

.panel
  .panel-heading
  .panel-body
    %p.text-right
    %table.table.table-contesto.table-hover.table-condensed
      %thead
        %tr
          %th= User.human_attribute_name(:name)
          %th= User.human_attribute_name(:email)
          %th= "Are you master?"
          %th(style="width: 20%;")= 'actions'
      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td= user.email
            %td= user.master? ? "Yes" : "No"
            %td.btn-group
              = link_to user_path(user), class: 'btn btn-primary btn-sm' do
                %i.far.fa-eye
              = link_to edit_user_path(user), class: 'btn btn-info btn-sm' do
                %i.fas.fa-pencil-alt
              - if !user.master?
                = link_to user_path(user), data: { confirm: 'confirm' }, method: :delete, class: 'btn btn-danger btn-sm' do
                  %i.far.fa-trash-alt
