.container
  .row
    .col-md-12
      %h2 Books
      %p
        = link_to 'New category', new_book_path
  .row
    %table
      %tr
        %th Image
        %th Name
        %th Author
        %th Status
        %th Action
        %th Reader
        %th Librarian
      - @books.each do |book|
        %tr
          %td
            .post-box{"data-item_id" => "#{book.id}"}
              - unless book.image.nil?
                = image_tag(book.image.thumb.url, alt: 'Image')
              - else
                = image_tag('default.png', alt: 'No image')
          %td
            %h3 Titul book '#{book.name}'"
          %td
            %h3 Author book '#{book.author}'"
          %td= book.status
          %td
            = link_to "View", book_path(book), class: "btn-xs, btn-info like-link"
            = link_to "Edit", edit_book_path(book), class: "btn-xs, btn-info like-link"
            = link_to "Delete", book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' }
          %td
            %h4 Reader
          %td
            %h4  '#{book.user.email}'





